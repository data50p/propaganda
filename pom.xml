    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <distributionManagement>
        <repository>
            <id>repo.got2.androtech.se</id>
            <name>repo.got2.androtech.se-releases</name>
            <url>http://repo.got2.androtech.se:8081/artifactory/ext-release-local</url>
        </repository>
    </distributionManagement>

